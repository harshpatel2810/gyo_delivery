<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    android:orientation="vertical"
    android:weightSum="1">
 <android.support.v7.widget.CardView
     android:layout_height="200dp"
     android:layout_marginTop="10dp"
     android:layout_weight="0.73"
     android:elevation="100dp"
     app:cardCornerRadius="5dp"
     android:layout_width="262dp">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textAlignment="center"
         android:layout_marginTop="5dp"
         android:textSize="15dp"
         android:textStyle="italic"
         android:textColor="@color/light_orange"
         android:fontFamily="Times New Roman"
         android:text="Address Details"/>
     <View
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:layout_marginTop="30dp"
         android:background="@color/grey" />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_weight="1"
         android:focusableInTouchMode="true"
         android:layout_marginTop="40dp">
         <!--<TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/display_street_locality"
             android:textSize="12dp"
             android:layout_marginLeft="10dp"
             android:textColor="@color/dark_blue"
             />-->
         <android.support.design.widget.TextInputLayout
             android:id="@+id/input_layout_name"
             android:layout_width="match_parent"
             android:layout_weight="1"
             android:textColorHint="#778899"
             android:layout_height="wrap_content">
             <EditText
                 android:id="@+id/txtAddressStreet"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:maxLines="4"
                 android:textColor="@color/slate_grey"
                 android:textSize="12dp"
                 android:textCursorDrawable="@color/dim_grey"
                 android:inputType="textNoSuggestions|textMultiLine|textCapSentences"
                 android:hint="@string/display_street_locality"/>
         </android.support.design.widget.TextInputLayout>
         <android.support.design.widget.TextInputLayout
             android:id="@+id/input_layout_building_name"
             android:layout_marginTop="20dp"
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:textColorHint="#778899"
             android:layout_height="wrap_content">
             <EditText
                 android:id="@+id/txtAddressBuilding"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:maxLines="2"
                 android:textColor="@color/slate_grey"
                 android:textSize="12dp"
                 android:textCursorDrawable="@color/dim_grey"
                 android:inputType="textNoSuggestions|textMultiLine"
                 android:hint="@string/display_building_flat"/>
         </android.support.design.widget.TextInputLayout>
         <android.support.design.widget.TextInputLayout
             android:id="@+id/input_layout_landmark"
             android:layout_width="match_parent"
             android:layout_marginTop="20dp"
             android:layout_weight="1"
             android:textColorHint="#778899"
             android:layout_height="wrap_content">
             <EditText
                 android:id="@+id/txtAddressLandmark"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textCursorDrawable="@color/dim_grey"
                 android:textSize="12dp"
                 android:textColor="@color/slate_grey"
                 android:maxLines="2"
                 android:inputType="textCapSentences|textMultiLine|textNoSuggestions"
                 android:hint="@string/display_building_landmark"/>
         </android.support.design.widget.TextInputLayout>
     </LinearLayout>
 </android.support.v7.widget.CardView>
<Button
    android:layout_width="200dp"
    android:layout_weight="0.02"
    android:id="@+id/btnSaveAddress"
    android:text="Save"
    android:textAllCaps="false"
    android:textAlignment="center"
    android:layout_marginTop="20dp"
    android:textColor="@color/white"
    android:background="@color/light_green"
    android:layout_height="wrap_content"
    />
</LinearLayout>